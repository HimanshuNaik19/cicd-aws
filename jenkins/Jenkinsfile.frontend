pipeline {
    agent any
    
    environment {
        IMAGE_NAME = 'devops-frontend'
        IMAGE_TAG = "${env.BUILD_NUMBER}"
        DOCKER_IMAGE = "himanshunaik22/${IMAGE_NAME}"
    }
    
    stages {
        stage('Build Docker Image') {
            steps {
                echo 'ÔøΩ Building Docker image...'
                script {
                    sh """
                        docker build -t ${DOCKER_IMAGE}:${IMAGE_TAG} \
                        -t ${DOCKER_IMAGE}:latest \
                        --target production \
                        -f /project/frontend/Dockerfile /project/frontend/
                    """
                }
            }
        }
        
        stage('Test Docker Image') {
            steps {
                echo 'üß™ Testing Docker image...'
                script {
                    sh """
                        docker run --rm ${DOCKER_IMAGE}:latest ls /usr/share/nginx/html
                        echo '‚úÖ Image works!'
                    """
                }
            }
        }
        
        stage('Push to Docker Hub') {
            steps {
                echo 'üì§ Pushing to Docker Hub...'
                script {
                    echo '‚ö†Ô∏è Docker push skipped - configure credentials to enable'
                    // Uncomment when credentials are configured:
                    // docker.withRegistry('https://registry.hub.docker.com', 'docker-hub') {
                    //     sh "docker push ${DOCKER_IMAGE}:${IMAGE_TAG}"
                    //     sh "docker push ${DOCKER_IMAGE}:latest"
                    // }
                }
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'üöÄ Deploying...'
                echo '‚ö†Ô∏è Deployment skipped - Kubernetes not configured yet'
            }
        }
    }
    
    post {
        success {
            echo '‚úÖ Pipeline completed successfully!'
        }
        failure {
            echo '‚ùå Pipeline failed!'
        }
    }
}
