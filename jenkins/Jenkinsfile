pipeline {
    agent any
    
    environment {
        DOCKER_HUB_REPO = 'himanshunaik22'
        IMAGE_TAG = "${BUILD_NUMBER}"
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo 'Code checked out from GitHub'
            }
        }
        
        stage('Build Backend') {
            steps {
                script {
                    dir('backend') {
                        sh 'docker build -t ${DOCKER_HUB_REPO}/devops-backend:${IMAGE_TAG} .'
                        sh 'docker build -t ${DOCKER_HUB_REPO}/devops-backend:latest .'
                    }
                }
            }
        }
        
        stage('Build Frontend') {
            steps {
                script {
                    dir('frontend') {
                        sh 'docker build -t ${DOCKER_HUB_REPO}/devops-frontend:${IMAGE_TAG} .'
                        sh 'docker build -t ${DOCKER_HUB_REPO}/devops-frontend:latest .'
                    }
                }
            }
        }
        
        stage('Test') {
            steps {
                echo 'Running tests...'
                echo 'Backend image built successfully'
                echo 'Frontend image built successfully'
            }
        }
        
        stage('Push to Docker Hub') {
            when {
                expression { 
                    return env.DOCKER_HUB_CREDENTIALS != null 
                }
            }
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials', 
                                                      usernameVariable: 'DOCKER_USER', 
                                                      passwordVariable: 'DOCKER_PASS')]) {
                        sh 'echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin'
                        sh 'docker push ${DOCKER_HUB_REPO}/devops-backend:${IMAGE_TAG}'
                        sh 'docker push ${DOCKER_HUB_REPO}/devops-backend:latest'
                        sh 'docker push ${DOCKER_HUB_REPO}/devops-frontend:${IMAGE_TAG}'
                        sh 'docker push ${DOCKER_HUB_REPO}/devops-frontend:latest'
                        sh 'docker logout'
                    }
                }
            }
        }
        
        stage('Deploy to Kubernetes') {
            when {
                expression { 
                    return fileExists('kubernetes/app.yaml')
                }
            }
            steps {
                echo 'Kubernetes deployment would happen here'
                echo 'Run: kubectl apply -f kubernetes/app.yaml'
            }
        }
    }
    
    post {
        success {
            echo '✅ Pipeline completed successfully!'
            echo "Backend image: ${DOCKER_HUB_REPO}/devops-backend:${IMAGE_TAG}"
            echo "Frontend image: ${DOCKER_HUB_REPO}/devops-frontend:${IMAGE_TAG}"
        }
        failure {
            echo '❌ Pipeline failed!'
        }
        always {
            echo 'Cleaning up...'
            sh 'docker system prune -f || true'
        }
    }
}
